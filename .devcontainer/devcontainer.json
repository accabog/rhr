{
  "name": "RHR Development",

  // Build dev container directly from Dockerfile
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // Dev Container features
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",

  // Configure tool-specific settings
  "customizations": {
    "vscode": {
      "extensions": [
        // Claude AI assistant
        "anthropic.claude-code",

        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "rangav.vscode-thunder-client",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
          }
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "editor.rulers": [88, 120],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "sqltools.connections": [
          {
            "name": "RHR Dev Database",
            "driver": "PostgreSQL",
            "server": "localhost",
            "port": 5432,
            "database": "rhr",
            "username": "rhr",
            "password": "rhr_dev_password"
          }
        ]
      }
    }
  },

  // Forward ports for development
  "forwardPorts": [3000, 8000, 5432, 6379],
  "portsAttributes": {
    "3000": { "label": "Frontend (Vite)", "onAutoForward": "notify" },
    "8000": { "label": "Backend (Django)", "onAutoForward": "notify" },
    "5432": { "label": "PostgreSQL", "onAutoForward": "silent" },
    "6379": { "label": "Redis", "onAutoForward": "silent" }
  },

  // Start services and install dependencies
  "initializeCommand": "docker compose up -d db redis",
  "postCreateCommand": "pip install uv && cd /workspace/backend && uv sync --extra dev && cd /workspace/frontend && npm ci && npm install -g typescript prettier npm-check-updates @anthropic-ai/claude-code && bash /workspace/.devcontainer/mcp-setup.sh && echo 'export GH_TOKEN=$(gh auth token 2>/dev/null)' >> ~/.bashrc",
  "postStartCommand": "echo 'ðŸš€ Dev container ready! Run: export GH_TOKEN=$(gh auth token)'",

  // Environment variables
  "containerEnv": {
    "DJANGO_SETTINGS_MODULE": "config.settings.local",
    "DATABASE_URL": "postgres://rhr:rhr_dev_password@rhr-db-1:5432/rhr",
    "REDIS_URL": "redis://rhr-redis-1:6379/0",
    "DEBUG": "true",
    "PYTHONPATH": "/workspace/backend"
  },

  // Mount Docker socket for docker commands inside container
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteUser": "vscode",

  // Connect to the same network as db/redis containers
  "runArgs": ["--network=rhr_default"]
}
