# Raptor HR Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=rhr
POSTGRES_USER=rhr
POSTGRES_PASSWORD=change_me_in_production

# ===========================================
# Django Configuration
# ===========================================
SECRET_KEY=change_me_to_a_long_random_string
DEBUG=false
ALLOWED_HOSTS=localhost,raptorhr.com
CSRF_TRUSTED_ORIGINS=https://raptorhr.com

# ===========================================
# Container Images (set by CI/CD)
# ===========================================
BACKEND_IMAGE=ghcr.io/accabog/rhr-backend:latest
FRONTEND_IMAGE=ghcr.io/accabog/rhr-frontend:latest

# ===========================================
# Google OAuth Configuration
# ===========================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH2_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# ===========================================
# For local development (optional)
# ===========================================
# VITE_API_URL=http://localhost:8000/api/v1
